<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JJOO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
       <nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="navbar-brand" href='@Url.ActionLink("Index", "Home")'><img src="../img/logoo.png"></a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href='@Url.ActionLink("Historia", "Home")'>Historia</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href='@Url.ActionLink("Deportes", "Home")'>Deportes</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href='@Url.ActionLink("Paises", "Home")'>Países</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href='@Url.ActionLink("AgregarDeportista", "Home")'>Agregar deportista</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href='@Url.ActionLink("Creditos", "Home")'>Créditos</a>
        </li>
      </ul>
      <form action='@Url.ActionLink("Buscar", "Home")' method="GET" class="d-flex" role="search">
        <input class="form-control me-2" type="search" name="busqueda" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Buscar</button>
      </form>
    </div>
  </div>
</nav>
<div class="header-overlay"></div>
<h1>Bienvenidos a la pagina de los JJOO 2024</h1>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        &copy; @DateTime.Now.Year - JJOO
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>